                                                        button.btn.btn-sm.btn-danger(type='button') Disable
                                            tr
                                                th(scope='row') 3
                                                td Safety Apparel
                                                td Fire Retardant , Coverall , Plain
                                                td pcs
                                                td 30
                                                td
                                                    div
                                                        a.button.btn.btn-info.btn-sm(data-toggle='modal', data-target='#edit3') Edit
                                                        button.btn.btn-sm.btn-success(type='button') Enable
                                                        button.btn.btn-sm.btn-danger(type='button') Disable

            #addproducts.modal.fade.modal-icon(tabindex='-1', role='dialog', aria-labelledby='addproducts', aria-hidden='true')
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
                            h4#myModalLabel.modal-title Add Product
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') ×
                        .modal-body
                            .row
                                .col-md-8
                                    .form-group
                                        | Name
                                        input#name.form-control(type='text', value='')
                                .col-md-4
                                    .form-group
                                        |Type Of Cloth
                                        input#name.form-control(type='text', value='')
                                .col-md-4
                                    .form-group
                                        |Type Of Garment
                                        input#name.form-control(type='text', value='')
                                .col-md-5
                                    .form-group
                                        | Color
                                        input#name.form-control(type='Text', value='')
                            .row   
                                .col-md-5
                                    .form-group
                                        | UOM
                                        input#name.form-control(type='Text', value='')
                                .col-md-5
                                    .form-group
                                        | Quantity
                                        input#name.form-control(type='number', value='')

    
                        .modal-footer
                            button.btn.btn-secondary(type='submit') Submit
                            button.btn.btn-secondary(type='button', data-dismiss='modal') Close

