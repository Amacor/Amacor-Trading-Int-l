extends ../../../templates/masternav
block content
    .main-body
        .page-wrapper
            .page-header
                .page-header-title
                    h4 Products &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    a.button.btn.btn-primary(data-toggle='modal', data-target='#addproducts') Add Product
                .page-header-breadcrumb
                    ul.breadcrumb-title
                        li.breadcrumb-item
                            a(href='/index')
                                i.icofont.icofont-home
                        li.breadcrumb-item
                            a(href='#') Maintenance
                        li.breadcrumb-item
                            a(href='#') Inventory
                        li.breadcrumb-item
                            a(href='/products') Products
            .page-body
                .row
                    .col-sm-12
                        .card
                            .card-header
                                h5 Materials
                                .card-header-right
                                    i.icofont.icofont-rounded-down
                                    i.icofont.icofont-refresh
                                    a(data-toggle='modal', data-target='#addproducts')
                                        i.icofont.icofont-ui-add
                            .card-block.table-border-style
                                .table-responsive
                                    table.table
                                        thead
                                            tr
                                                th #
                                                th Name
                                                th Description                                                 
                                                th UOM 
                                                th Quantity
                                                th Actions
                                        tbody
                                            tr
                                                th(scope='row') 1
                                                td Safety Apparel
                                                td Cotton , Coverall , Plain
                                                td pcs
                                                td 200
                                                td
                                                    div
                                                        a.button.btn.btn-info.btn-sm(data-toggle='modal', data-target='#edit1') Edit
                                                        button.btn.btn-sm.btn-success(type='button') Enable
                                                        button.btn.btn-sm.btn-danger(type='button') Disable
                                            tr
                                                th(scope='row') 2
                                                td Safety Apparel
                                                td Polyester cotton, Coverall , Plain
                                                td pcs
                                                td 100
                                                td
                                                    div
                                                        a.button.btn.btn-info.btn-sm(data-toggle='modal', data-target='#edit2') Edit
